use std::str::FromStr;
use dice_bot::commands::Command;

grammar;

Int: u64 = <s:r"[0-9]+"> => u64::from_str(s).unwrap();

RollWord = {"roll", "d"};
Warhammer = {"warhammer", "wh"};


pub Cmd: Command =
{
        RollWord <n: Int> => Command::Roll(n, 1),
        <m: Int> RollWord <n: Int> => Command::Roll(n, m),
        Warhammer <score: Int> => Command::Warhammer{score: score} 
}